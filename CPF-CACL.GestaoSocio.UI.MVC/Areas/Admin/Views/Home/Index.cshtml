<div class="row espaco">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@ViewBag.TotalSocios</h3>

                <p>Sócios</p>
            </div>
            <div class="icon">
                <i class="ion ion-android-people"></i>
            </div>
            <a href="/Socio/Index" class="small-box-footer">Mais informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@ViewBag.TotalPagamentos</h3>

                <p>Pagamentos efectuados</p>
            </div>
            <div class="icon">
                <i class=" ion ion-stats-bars"></i>
            </div>
            <a href="/Pagamento/Index" class="small-box-footer">Mais informações<i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@ViewBag.TotalUsuarios</h3>

                <p>Usuários Registados</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="@Url.Action("Index", "Usuario", new {area = "Admin"})" class="small-box-footer">Mais informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@ViewBag.TotalFornecedores</h3>

                <p>Fornecedores</p>
            </div>
            <div class="icon">
                <i class="fas fa-chart-pie  ion ion-ios-briefcase"></i>
            </div>
            <a href="/Admin/Fornecedor/Index" class="small-box-footer">Mais informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
  
</div>
<!-- /.row -->

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-xl-12">
                        <div class="card mb-2">
                            <img class="" src="~/img/app_img/photo2.png" alt="Dist Photo 2">
                            <div class="card-img-overlay d-flex flex-column justify-content-center">
                                <h5 class="card-title text-white mt-5 pt-2">CPF-CACL</h5>
                                <p class="card-text pb-2 pt-1 text-white">
                                    Somos uma associação mutualista e<br>
                                    temos por finalidade a solidariedade entre os associados <br>
                                    e os seus familiares, <br>
                                    bem como a concessão de benefícios de segurança social, <br>
                                    de saúde, a proteção social <br>
                                    e promoção da qualidade de vida.
                                </p>
                                <a href="#" class="text-white">Existimos desde 2019</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

