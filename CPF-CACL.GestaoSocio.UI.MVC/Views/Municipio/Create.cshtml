@model CPF_CACL.GestaoSocio.Aplication.ViewModel.MunicipioViewModel


<div class="modal fade" id="municipio" aria-hidden="false" data-bs-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-dialog">
            <div class="modal-content">
                <!--Cabeçalho do Modal-->
                <div class="modal-header">
                    <h5 class="modal-title" id="municipioLabel">Criar Município</h5>
                    <br />
                    <button type="button" class="btn btn-close" data-bs-dismiss="modal" data-bs-keyboard="false" aria-label="Close">X</button>
                </div>
                <!--Corpo do Modal-->
                <div class="modal-body">
                    <form >
                        <div class="form-group">
                            <label asp-for="Nome">Nome do município</label>
                            <br />
                            <input type="text" id="Nome" asp-for="Nome" class="form-control" placeholder="Digite o nome do município">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="modal-footer">
                            <button type="button" onclick="AdicionarMunicipio()" class="btn btn-primary btn-block waves-effect">Adicionar</button>
                            @* <button type="submit" class="btn btn-primary btn-block">Adicionar</button> *@
                            <a role="button"  class="btn btn-secondary btn-block" asp-controller="Municipio" asp-action="Index"> Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



    