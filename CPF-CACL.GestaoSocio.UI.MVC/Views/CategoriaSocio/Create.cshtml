@model CPF_CACL.GestaoSocio.Aplication.ViewModel.CategoriaSocioViewModel


<div class="modal fade" id="categoria" aria-hidden="false" data-bs-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="categoriaLabel">Criar Categoria de Sócio</h5>
                    <br />
                    <button type="button" class="btn btn-close" data-bs-dismiss="modal" data-bs-keyboard="false" aria-label="Close"></button>
                </div><div class="modal-body">
                    <form asp-controller="CategoriaSocio" asp-action="Create" method="post">
                        <div class="form-group">
                            <label asp-for="Nome">Nome da Categoria</label>
                            <br />
                            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o Nome da Categoria">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="form-group">
                            <label asp-for="Quota">Quota </label>
                            <br />
                            <input type="text" asp-for="Quota" class="form-control" placeholder="Digite a Quota da Categoria">
                            <span asp-validation-for="Quota" class="text-danger"></span>
                        </div>
                        <br />


                        <div class="">
                            <input type="hidden" value="@DateTime.Now" asp-for="DataCriacao">
                        </div>

                        <div class="">
                            <input type="hidden" value="true" asp-for="Status">
                        </div>
                        <br />
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
                            <a role="button" class="btn btn-secondary btn-block" asp-controller="CategoriaSocio" asp-action="Index"> Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>