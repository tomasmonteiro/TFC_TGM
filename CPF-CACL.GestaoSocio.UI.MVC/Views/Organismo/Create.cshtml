@model CPF_CACL.GestaoSocio.Aplication.ViewModel.OrganismoViewModel


<div class="modal fade" id="oganismo" aria-hidden="false" data-bs-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="organismoLabel">Criar Organismo</h5>
                    <br />
                    <button type="button" class="btn btn-close" data-bs-dismiss="modal" data-bs-keyboard="false" aria-label="Close">X</button>
                </div>
                <!--Corpo do Modal-->
                <div class="modal-body">
                    <form asp-controller="Organismo" asp-action="Create" method="post">
                        <div class="form-group">
                            <label asp-for="Nome">Nome do organismo</label>
                            <br />
                            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do organismo">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
                            <a role="button" class="btn btn-secondary btn-block" asp-controller="Organismo" asp-action="Index"> Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
