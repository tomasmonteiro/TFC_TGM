@model CPF_CACL.GestaoSocio.Aplication.ViewModel.RelacaoViewModel


<div class="modal fade" id="criarRelacao" aria-hidden="false" data-bs-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-dialog">
            <div class="modal-content">
                <!--Cabeçalho do Modal-->
                <div class="modal-header">
                    <h5 class="modal-title" id="relcaoLabel">Criar Relação</h5>
                    <br />
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!--Corpo do Modal-->
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label asp-for="Nome">Nome da relação</label>
                            <br />
                            <input type="text" id="Nome" asp-for="Nome" class="form-control" placeholder="Digite o nome da relação">
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="modal-footer">
                            <button type="button" onclick="AdicionarRelacao()" class="btn btn-success waves-effect">Adicionar</button>
                            @* <button type="submit" class="btn btn-primary btn-block">Adicionar</button> *@
                            <a role="button" class="btn btn-link waves-effect" asp-controller="Relacao" asp-action="Index"> Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
