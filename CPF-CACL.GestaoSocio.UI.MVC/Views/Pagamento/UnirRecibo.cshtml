@using CPF_CACL.GestaoSocio.Aplication.ViewModel;

@model SocioViewModel

@{
    ViewData["Title"] = "Unir Recíbo";
}

<div id="loading-overlay" style="display: none;">
    <div id="loading-circle">
        <i class="fas fa-circle-notch fa-spin"></i> Carregando...
    </div>
</div>
<input type="hidden" id="idSocio" value="@Model.Id" />
<div class="page-header">
    <div class="row">
        <div class="col-12 col-md-12 col-sm-12">
            <div class="title">
                <h4>Unir Recíbo</h4>
            </div>
            <nav class="col-12 col-md-12 col-sm-12" aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item"><a href="/Pagamento/Index">Pagamento</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Unir Recíbo</li>
                </ol>
            </nav>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="margem-container card-body">
                <div class="margens col-12 col-md-12 col-lg-12">
                    <div class="text-center col-12 col-md-12 col-lg-12">
                        <!---->
                        <div class="row">
                            <div class="col-12 col-md-6 col-lg-6">
                                <table class="table table-bordered stripe" id="tabelaSaldo">
                                    <thead>
                                        <tr>
                                            <th class="text-left" style="display:none">ID</th>
                                            <th class="text-left" style="width: 50px">Data</th>
                                            <th class="text-left">Recibo</th>
                                            <th class="text-left">Valor</th>
                                            <th class="text-left" style="display:none">Pagamento</th>
                                            <th class="text-right">Opção</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var saldo in ViewBag.Saldo)
                                        {
                                            <tr role="row" class="">
                                                <td class="text-left" style="display:none">@saldo.Id</td>
                                                <td class="text-left">@saldo.DataPagamento.ToString("dd/MM/yyyy")</td>
                                                <td class="text-left">@saldo.Recibo</td>
                                                <td class="text-left">@saldo.Valor</td>
                                                <td class="text-left" style="display:none">@saldo.PagamentoId</td>
                                                <td class="text-right">
                                                    <div class="icheck-success d-inline">
                                                        @{
                                                            if (ViewBag.Saldo.Count == 1)
                                                            {
                                                                <input type="checkbox" class="checkboxRegisto" disabled="disabled" checked id="saldo">
                                                            }
                                                            else
                                                            {
                                                                <input type="checkbox" class="checkboxRegisto" checked id="saldo">
                                                            }
                                                        }
                                                        
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            

                            <div class="">
                                <input type="hidden" value="@DateTime.Now" id="dataCriacao">
                            </div>
                            <div class="">
                                <input type="hidden" value="true" id="Status">
                            </div>


                            <div class="col-12 col-md-12 col-lg-12">
                                <button type="button" id="btnRegistar" onclick="UnirRecibo()" class="btn btn-success float-right waves-effect"> Unir Recíbos</button>
                            </div>
                        </div>
                        <!--/-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
